{
    "name": "Youtube Accelerator",
    "description": "Set custom playback speeds on your youtube videos",
    "version": "0.1",
    "manifest_version": 3,
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/watch*"],
        "js": ["content.js"]
      }
    ],
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "/images/icon.svg",
            "32": "/images/icon.svg",
            "48": "/images/icon.svg",
            "128": "/images/icon.svg"
          }
    },    
    "icons": {
        "16": "/images/icon.svg",
        "32": "/images/icon.svg",
        "48": "/images/icon.svg",
        "128": "/images/icon.svg"
    }
}